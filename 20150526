//Trabalho 12

import java.util.Scanner;

public class MultiplicaMatrizes extends Thread{

	Scanner scanner = new Scanner( System.in );
	int x;
	int y;
	int z;
	
	public void run(){
		System.out.println("Escolha o valor de X: ");
		x = scanner.nextInt();
		System.out.println("Escolha o valor de Y: ");
		y = scanner.nextInt();
		System.out.println("Escolha o valor de Z: ");
		z = scanner.nextInt();
		
		int matriz1[][] = new int[x][y];
		int matriz2[][] = new int[y][z];
		int matriz3[][] = new int[x][z];
		
		for (int i=0; i<x; i++) {
		      for (int j=0; j<y; j++) {
		    	  System.out.println("Escolha o valor da posição "+i+" "+j+" da Matriz 1: ");
		    	  matriz1[i][j] = scanner.nextInt();
		      }
		    }
		for (int i=0; i<y; i++) {
		      for (int j=0; j<z; j++) {
		    	  System.out.println("Escolha o valor da posição "+i+" "+j+" da Matriz 2: ");
		    	  matriz2[i][j] = scanner.nextInt();
		      }
		    }
		
		for (int i=0; i<x; i++) {
		      for (int j=0; j<z; j++) {
		        int sm = 0;
		        for (int k=0; k<y; k++) {
		          sm = sm + (matriz1[i][k] * matriz2[k][j]);
		        }
		        matriz3[i][j] = sm;
		      }
		    }
		
		System.out.println("Resultado :");
		for (int i=0; i<x; i++) {
			System.out.println(" ");
		      for (int j=0; j<z; j++) {
		    	  System.out.print(matriz3 [i][j] + " ");
		      }
		    }
	}
	
	public static void main(String[] args) {
		
		Thread multiplicador1 = new MultiplicaMatrizes();
		multiplicador1.start();
	}

}

